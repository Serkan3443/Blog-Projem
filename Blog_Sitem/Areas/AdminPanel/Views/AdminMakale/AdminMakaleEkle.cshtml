@using BlogSitem.DLL.BlogSiteDatabase

@model IEnumerable<MakaleKategorileri>

<!--Bu kodu AdminLTE altındaki editor.html den aldım-->
@section addTopLibrary{
    <link rel="stylesheet" href="../../plugins/summernote/summernote-bs4.min.css">


}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/AdminPanel/AdminMakale/AdminMakaleIndex">Makale Listesi</a></li>
                    <li class="breadcrumb-item active">Makale Ekle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!--Bu section kodunu AdminLTE altında validation.html sayfasından aldım bu kod bana makale ekleme sayfamı oluşturmam için gerekli koddur-->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Makale Ekle</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form id="makaleEkleForm" action="~/AdminPanel/AdminMakale/AdminMakaleEkle" method="post">
                        <!--Burdaki action amacı ben Makale Ekle ye tıkladığım zaman AdminMakaleEkle sayfasına götürecek beni-->
                        <div class="card-body">

                            <div class="form-group">
                                <label>Makale Kategorisi</label>
                                <select class="form-control" name="makaleKategori">
                                    <option value="0" selected>Seçiniz</option>
                                 
                                        @foreach (var item in Model)
                                        {
                                            <option value="@item.MakaleKategorileriID">@item.KategoriAdi</option>
                                        }
                                    
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Makale Başlık</label>
                                <input type="text" name="makaleBaslik" class="form-control" placeholder="Makale Başlık alanı">
                            </div>

                            <div class="form-group">
                                <label>Makale İçerik</label>
                                <section class="content">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="card card-outline card-info">

                                                <div class="card-body">
                                                    <textarea id="makaleIcerik" name="makaleIcerik" placeholder="makale içerik alanı"></textarea>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-success">Makale Ekle</button>
                            </div>

                            <div>
                                @Html.Raw(ViewBag.mesaj)<!--Hata ya da başarılı olması durumıunda mesaj almak için bunu buraya yazdım-->
                            </div>

                        </div>
                    </form>
                </div>
            </div>
            <!-- /.card -->
        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-6">

        </div>
        <!--/.col (right) -->
        <!-- /.row -->
    </div><!-- /.container-fluid -->

</section>
<!--------------Yukarıdaki div`i MakalelerIndex sayfasından aldım----------->

@section addBottomLibrary{
    <!--Bu script kodlarını editor.html den aldım-->
    <script src="../../plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            // Summernote
            $('#makaleIcerik').summernote()

            // CodeMirror
            CodeMirror.fromTextArea(document.getElementById("codeMirrorDemo"), {
                mode: "htmlmixed",
                theme: "monokai"
            });
        })
    </script>

    <!--Bu script kodunu validtaion.html den aldım-->
    <script src="~/Areas/AdminPanel/AdminLTE/plugins/jquery-validation/jquery.validate.js"></script>
    <script>
        $(function () {

        });
        $('#makaleEkleForm').validate({
            rules: {
                makaleKategori: {
                    required: true,

                },
                makaleBaslik: {
                    required: true,
                   
                },
                makaleIcerik: {
                    required: true
                },
            },
            messages: {
                makaleKategori: {
                    required: "Lütfen makale kategori yazınız",
                    
                },
                makaleBaslik: {
                    required: "Başlık alanı zorunlu olmalı",
                },
            makaleIcerik: {
                required: "Makale içerik alanı dolu olmak zorunda"
            },
            errorElement: 'span',
            errorPlacement: function (error, element) {
                error.addClass('invalid-feedback');
                element.closest('.form-group').append(error);
            },
            highlight: function (element, errorClass, validClass) {
                $(element).addClass('is-invalid');
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).removeClass('is-invalid');
            }
        });

    </script>

}