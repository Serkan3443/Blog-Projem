@using BlogSitem.DLL.BlogSiteDatabase

@model List<Yazarlar>
@{
    ViewBag.Title = "AdminYazarEKle";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

@section addTopLibrary{

    <link rel="stylesheet" href="~/Areas/AdminPanel/AdminLTE/plugins/summernote/summernote-bs4.min.css">

}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/AdminPanel/AdminYazar/AdminYazarIndex" method="post">Yazarlar Listesi</a></li>
                    <li class="breadcrumb-item active">Yazar Ekle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">YAZAR EKLE SAYFASI</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form id="YazarEkleForm" action="~/AdminPanel/AdminYazar/AdminYazarEkle" method="post">
                        <div class="card-body">

                            <div class="form-group">
                                <label>Yazar Adi</label>
                                <input type="text" name="yazarAdi" class="form-control" placeholder="Yazar Adı alanı" />
                            </div>

                            <div class="form-group">
                                <label>Yazar Soyadı</label>
                                <input type="text" name="yazarSoyadi" class="form-control" placeholder="Yazar Soyadı Alanı" />
                            </div>

                            <div class="form-group">
                                <label>Yazar Email</label>
                                <input type="text" name="email" class="form-control" placeholder="Yazar Email Adres alanı" />
                            </div>

                            <div class="form-group">
                                <label>Çalıştığı Firma</label>
                                <input type="text" name="calistigiFirma" class="form-control" placeholder="Yazar Çalıştığı Firma alanı"/>
                            </div>

                            <div class="form-group">
                                <label>Yaşadığı Ülke</label>
                                <select class="form-control" name="yasadigiUlke">
                                    <option value="0" selected>Seçiniz</option>
                                    @foreach (var item in Model)
                                    {
                                        <option value="@item.YazarlarID">@item.YasadigiUlke</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Yaşadığı Şehir</label>
                                <select class="form-control" name="yasadigiSehir">
                                    <option value="0" selected>Seçiniz</option>
                                    @foreach (var item in Model)
                                    {
                                        <option value="@item.YazarlarID">@item.YasadigiSehir</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Yazar Hakkında</label>
                                <textarea id="kisacaHakkinda" name="kisacaHakkinda"></textarea>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">Yazar Ekle</button>
                        </div>

                        <div>
                            @Html.Raw(ViewBag.mesaj)
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section addBottomLibrary{
    <script src="~/Areas/AdminPanel/AdminLTE/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
    $(function () {
            // Summernote
            $('#kisacaHakkinda').summernote()

        })</script>
    <script src="~/Areas/AdminPanel/AdminLTE/plugins/jquery-validation/jquery.validate.js"></script>
    <script>
    $(function () {

            $('#YazarEkleForm').validate({
                rules: {
                    yazarAdi: {
                        required: true
                    },
                    yazarSoyad: {
                        required: true
                    },
                    email: {
                        required: true
                    },
                    calistigiFirma: {
                        required: true
                    },
                    kisacaHakkinda: {
                        required: true
                    },
                    yasadigiUlke: {
                        required: true
                    },
                    yasadigiSehir: {
                        required: true
                    }

                },
                messages: {
                    yazarAdi: {
                        required: "Yazar adı alanı zorunludur"
                    },
                    yazarSoyadi: {
                        required: "Yaar Soyadı alanı zorunludur"
                    },
                    email: {
                        required: "Yazar Email alanı zorunludur"
                    },
                    calistigiFirma: {
                        required:"Yazarın Çalıştığı firma alanı zorunludur"  
                    },
                    kisacaHakkinda: {
                        required:"Yazarın Hakkında alanı zorunludur"
                    },
                    yasadigiUlke: {
                        required: "Yazarın yaşadığı ülke zorunlu olmalıdır"
                    },
                    yasadigiSehir: {
                        required: "Yazarın yaşadığı şehir zorunlu olmalıdır"
                    }
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });
        });</script>
}
