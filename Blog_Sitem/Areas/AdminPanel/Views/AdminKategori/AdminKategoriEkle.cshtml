@using BlogSitem.DLL.BlogSiteDatabase

@model List<MakaleKategorileri>
@section addTopLibrary{

    <link rel="stylesheet" href="~/Areas/AdminPanel/AdminLTE/plugins/summernote/summernote-bs4.min.css">

}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/AdminPanel/AdminKategori/AdminKategoriIndex">Kategori Listesi</a></li>
                    <li class="breadcrumb-item active">Kategori Ekle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">KATEGORİ EKLE</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form id="makaleEkleForm" action="~/AdminPanel/AdminKategori/AdminKategoriEkle" method="post">
                        <div class="card-body">

                            <div class="form-group">
                                <label>Kategori Adı</label>
                                <input type="text" name="kategoriAdi" class="form-control" placeholder="Kategori Adı Alanı" />
                            </div>

                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea name="aciklama" id="aciklama" placeholder="Açıklama Alanı"></textarea>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">Kategori Ekle</button>
                        </div>

                        <div>
                            @Html.Raw(ViewBag.mesaj)
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@section addBottomLibrary{
    <script src="~/Areas/AdminPanel/AdminLTE/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            // Summernote
            $('#aciklama').summernote()

        })</script>
    <script src="~/Areas/AdminPanel/AdminLTE/plugins/jquery-validation/jquery.validate.js"></script>
    <script>
        $(function () {

            $('#makaleEkleForm').validate({
                rules: {
                    kategoriAdi: {
                        required: true
                    },
                    aciklama: {
                        required: true
                    },

                    messages: {
                        kategoriAdi: {
                            required: "Kategori Adı alanı zorunludur"
                        },
                        aciklama: {
                            required: "Açıklama alanı zorunludur"
                        },
                        errorElement: 'span',
                        errorPlacement: function (error, element) {
                            error.addClass('invalid-feedback');
                            element.closest('.form-group').append(error);
                        },
                        highlight: function (element, errorClass, validClass) {
                            $(element).addClass('is-invalid');
                        },
                        unhighlight: function (element, errorClass, validClass) {
                            $(element).removeClass('is-invalid');
                        }
                    });
        });</script>
}

