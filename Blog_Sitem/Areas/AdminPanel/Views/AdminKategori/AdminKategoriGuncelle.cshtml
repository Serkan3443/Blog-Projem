@model BlogSitem.DLL.BlogSiteDatabase.MakaleKategorileri

@{
    ViewBag.Title = "AdminKategoriGuncelle";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

@section addTopLibrary{
    <link rel="stylesheet" href="~/Areas/AdminPanel/AdminLTE/plugins/summernote/summernote-bs4.min.css">
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                </h1>
            </div><!-- /.col -->
            <div class="col-sm-6">

                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/AdminPanel/AdminKategori/AdminKategoriIndex">Kategoriler</a></li>
                    <li class="breadcrumb-item active">Kategori Güncelle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<section class="content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">


                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>MakaleKategorileri</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.MakaleKategorileriID)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.KategoriAdi, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.KategoriAdi, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.KategoriAdi, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model=>model.AktifMi, htmlAttributes: new {@classs="control-label col-md-2"})
                                    <div class="col-md-10">
                                        <div class="checkbox">
                                            @Html.EditorFor(model=>model.AktifMi)
                                            @Html.ValidationMessageFor(model => model.AktifMi, "", new {@class="text-danger"})
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                        <label>Açıklama</label>
                                        <textarea id="aciklama" name="aciklama">@Model.Aciklama</textarea>
                                </div>


                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Güncelle" class="btn btn-warning" />
                                    </div>
                                </div>

                                @Html.Raw(ViewBag.mesaj)

                            </div>

                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section addBottomLibrary{
    <script src="~/Areas/AdminPanel/AdminLTE/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
    $(function () {
            // Summernote
            $('#aciklama').summernote()

        })</script>

}