@RenderSection("menuCSS", false)
<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center header-transparent">
        <ul class="container d-flex justify-content-between align-items-center">

            <div class="logo">
                <h1 class="text-light"><a href="index.html"><span>Serkan Blog Sayfası</span></a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="index.html"><img src="~/template/Moderna/assets/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>

            <nav id="navbar" class="navbar">

                <ul>
                    <li><a class="active " href="~/Anasayfa/AnasayfaIndex" id="anasayfa">Anasayfa</a></li>
                    <li><a href="~/Hakkinda/HakkindaIndex" id="hakkimda">Hakkımda</a></li>
                    <li><a href="~/Makale/MakalelerIndex" id="makale">Makaleler</a></li>
                    @RenderSection("kategoriGoster", false)


                    <li><a href="~/Iletisim/IletisimIndex" id="iletisim">İletişim</a></li>

                    <!--Bu alanla ilgili AdminLayout sayfasında Admin ya da yazar ise ilgili sayfalara girebilsin dedim yani burdaki bağlantı orasıyla ilgilidir-->
                    @if (Session["userName"] != null)
                    {
                        <li class="dropdown">
                            <a href="#" class="mx-2 dropdown-toggle"><span class="bi-box-arrow-in-right bi-person">@Session["userName"]</span></a>
                            <ul class="dropdown-menu">
                                @if (Session["userYetki"].ToString() == YetkilerEnums.Admin.GetHashCode().ToString() || Session["userYetki"].ToString() == YetkilerEnums.Yazar.GetHashCode().ToString())
                                {
                                    <li><a class="dropdown-item" href="~/AdminPanel/AdminAnasayfa/AdminAnasayfaIndex/@TempData["kullaniciID"]">Admin Paneli</a></li>
                                }

                                <li class="dropdown-item">
                                    <a href="~/Kullanici/KullaniciCikis">Çıkış</a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a href="~/Kullanici/GirisIndex" class="mx-2"><span class="bi-box-arrow-in-right">Giriş</span></a></li>
                    }

                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
      
        </ul>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <!-- ======= Hero Section ======= -->


    <main id="main">
        @RenderBody()
    </main><!-- End #main -->


    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
